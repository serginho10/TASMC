<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vivanco.tasmc.Hoteles">

    <include
        android:id="@+id/app_bar_hotel"
        layout="@layout/app_bar_hotel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/lugar"
        android:hint="@string/nombre_ciudad"
        android:layout_below="@+id/app_bar_hotel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:drawableLeft="@drawable/lupa"
        android:layout_marginTop="48dp" />

    <Button
        style="@style/ButtonAppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buscar_hoteles"
        android:id="@+id/botonHotel"
        android:clickable="true"
        android:textSize="18dp"
        android:background="@color/acentuadoHotel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="buscar"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView15"
        android:src="@drawable/huespedes"
        android:layout_below="@+id/lugar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView17"
        android:src="@drawable/star"
        android:layout_below="@+id/huespedes"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/categoria"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView17"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/huespedes"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView15"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
