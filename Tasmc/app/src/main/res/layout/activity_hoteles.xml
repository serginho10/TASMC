<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vivanco.tasmc.Hoteles">

    <include
        android:id="@+id/app_bar_hotel"
        layout="@layout/app_bar_hotel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/lugar"
        android:hint="Nombre de la ciudad o lugar"
        android:layout_below="@+id/app_bar_hotel"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:drawableLeft="@drawable/lupa"
        android:layout_marginTop="48dp" />

    <Button
        style="@style/ButtonAppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar Hoteles"
        android:id="@+id/botonHotel"
        android:clickable="true"
        android:textSize="18dp"
        android:background="@color/acentuadoHotel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView13"
        android:layout_marginTop="48dp"
        android:src="@drawable/calendar"
        android:layout_below="@+id/lugar"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView14"
        android:src="@drawable/habitaciones"
        android:layout_below="@+id/imageView13"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView15"
        android:layout_below="@+id/imageView14"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:src="@drawable/huespedes" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imageView17"
        android:layout_below="@+id/imageView15"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:src="@drawable/star" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categoria"
        android:layout_alignTop="@+id/imageView17"
        android:layout_toEndOf="@+id/imageView17" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/habitaciones"
        android:layout_above="@+id/imageView15"
        android:layout_toEndOf="@+id/imageView14" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/huespedes"
        android:layout_above="@+id/imageView17"
        android:layout_toEndOf="@+id/imageView14" />

    <EditText
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/fechain"
        android:hint="Fecha entrada"
        android:layout_above="@+id/imageView14"
        android:layout_alignStart="@+id/habitaciones" />

    <EditText
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/fechaout"
        android:hint="Fecha salida"
        android:layout_alignTop="@+id/fechain"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
