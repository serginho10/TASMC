<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vivanco.tasmc.Vuelos">

    <include
        android:id="@+id/app_bar_infv"
        layout="@layout/app_bar_infv" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/vuelo"
        android:hint=" Numero de vuelo(LAN2629)"
        android:layout_below="@+id/app_bar_infv"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:drawableLeft="@drawable/lupa" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar mi vuelo"
        android:id="@+id/buscar"
        android:background="@color/acentuadoInfoV"
        android:onClick="buscar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <com.example.vivanco.tasmc.SlidingTabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>


