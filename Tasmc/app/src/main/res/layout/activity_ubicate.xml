<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circular="http://schemas.android.com/apk/res-auto"
    android:id="@+id/m"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vivanco.tasmc.Ubicate">



    <com.example.vivanco.tasmc.ZoomView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/zoomView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlBottomTitle"
        android:layout_below="@+id/app_bar_ubk"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/zv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true">

            </ImageView>

            <com.lylc.widget.circularprogressbar.CircularProgressBar
                android:id="@+id/circularprogressbar2"
                style="@style/Widget.ProgressBar.CircularProgressBar"
                android:layout_width="150dip"
                android:layout_height="150dip"
                circular:cpb_title="Title"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/aimHir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageView>
        </RelativeLayout>
    </com.example.vivanco.tasmc.ZoomView>

</RelativeLayout>
