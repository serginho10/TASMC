<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vivanco.tasmc.Ida_Vuelta">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/app_bar_vuelo"
            android:layout_marginTop="31dp"
            android:src="@drawable/ubicacion" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/origeniv"
            android:layout_alignStart="@+id/origeniv"
            android:text="@string/origen" />

        <EditText
            android:id="@+id/origeniv"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView5"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="@string/hint_origen"
            android:inputType="textPersonName" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignEnd="@+id/imageView5"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView5"
            android:layout_marginTop="42dp"
            android:layout_toStartOf="@+id/origeniv"
            android:src="@drawable/ubicacion" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/destinoiv"
            android:layout_alignStart="@+id/origeniv"
            android:text="@string/destino" />

        <EditText
            android:id="@+id/destinoiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/origeniv"
            android:layout_alignStart="@+id/textView8"
            android:layout_alignTop="@+id/imageView6"
            android:ems="10"
            android:hint="@string/hint_destino"
            android:inputType="textPersonName" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/destinoiv"
            android:layout_marginTop="37dp"
            android:src="@drawable/calendar" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView7"
            android:layout_marginTop="37dp"
            android:src="@drawable/persona" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView8"
            android:layout_marginTop="37dp"
            android:src="@drawable/money" />

        <Button
            android:id="@+id/vuelos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:background="@color/acentuadoVuelo"
            android:text="@string/buscar_vuelos"
            android:textColor="@android:color/white" />

        <Spinner
            android:id="@+id/pasajerosiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/claseiv"
            android:layout_alignTop="@+id/imageView8" />

        <Spinner
            android:id="@+id/claseiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/destinoiv"
            android:layout_alignTop="@+id/imageView9" />

        <EditText
            android:id="@+id/fechaI"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView8"
            android:layout_alignStart="@+id/destinoiv"
            android:ems="10"
            android:hint="@string/hint_fecha_ida"
            android:inputType="date" />

        <EditText
            android:id="@+id/fechaV"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fechaI"
            android:layout_alignEnd="@+id/destinoiv"
            android:ems="10"
            android:hint="@string/hint_fecha_vuelta"
            android:inputType="date" />

    </RelativeLayout>


</FrameLayout>
