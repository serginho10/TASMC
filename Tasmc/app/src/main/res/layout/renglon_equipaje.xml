<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logoEquipaje"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/romantico" />

    <TextView
        android:id="@+id/tituloEquipaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/logoEquipaje"
        android:layout_toEndOf="@+id/logoEquipaje"
        android:text="@string/nombre_equipaje"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/objetosEquipaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/logoEquipaje"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/logoEquipaje"
        android:text="@string/objetos"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>