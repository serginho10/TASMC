<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logoEquipaje"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/romantico" />

    <TextView
        android:id="@+id/tituloEquipaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nombre_equipaje"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignTop="@+id/logoEquipaje"
        android:layout_toEndOf="@+id/logoEquipaje"
        android:layout_marginStart="17dp" />

    <TextView
        android:id="@+id/objetosEquipaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/objetos"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/logoEquipaje"
        android:layout_alignStart="@+id/tituloEquipaje" />
</RelativeLayout>